@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />

<div class="Containe p-3">
   <div class="Col-6">
    <h2 class="text-primary">لیست تایپ ها</h2>
    </div>
    <div class="Col-6 text-end">
        <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i>  ایجاد تایپ جدید
        </a>
    </div>
</div>
<br/>
    <table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>نام تایپ</th>
            <th> 

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">@obj.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id">
                            <i class="bi bi-pencil"></i> ویرایش 
                        </a>
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id">
                            <i class="bi bi-x-circle"></i> حذف
                        </a>
                    </div>
                </td>
            </tr>
            
        }
    </tbody>
</table>




